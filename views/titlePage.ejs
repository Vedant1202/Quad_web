      }
      .slideshow li:nth-child(5) {
        background-image: url("http://www.eyeondrones.com/drone-wallpapers/1920x1080/hubsan-x4-beach-sand-1920x1080.jpg");
        animation-delay: 40s;
      }
      .slideshow li:nth-child(6) {
        background-image: url("http://www.eyeondrones.com/drone-wallpapers/1920x1080/yuneec-q500-new-york-1920x1080.jpg");
        animation-delay: 50s;
      }

      @keyframes imageAnimation {
        0% {
          opacity: 0;
          animation-timing-function: ease-in;
        }
        10% {
          opacity: 1;
          animation-timing-function: ease-out;
        }
        20% {
          opacity: 1
        }
        30% {
          opacity: 0
        }
      }
